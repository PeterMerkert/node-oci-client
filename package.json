{
  "name": "@retracedgmbh/node-oci-client",
  "version": "1.4.14",
  "license": "UNLICENSED",
  "homepage": "http://retraced.co",
  "repository": "retracedgmbh/node-oci-client",
  "author": "Retraced GmbH",
  "description": "Nodejs client for the OCI API",
  "main": "src/index.js",
  "scripts": {
    "test": "env-cmd ava --verbose",
    "test-ci": "nyc ava -v -c 2",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && CODECOV_TOKEN=$CODECOV_TOKEN_NODE_OCI_CLIENT codecov",
    "lint": "xo",
    "autofix": "xo --fix"
  },
  "engines": {
    "node": "^12.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "useTabs": true
  },
  "xo": {
    "prettier": true,
    "globals": [
      "it",
      "describe",
      "expect",
      "fail",
      "test"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ],
      "ava/no-ignored-test-files": [
        "off",
        {
          "files": [
            "lib/**/*.test.js",
            "utils/**/*.test.js"
          ]
        }
      ],
      "node/prefer-promises/fs": "off",
      "complexity": "off"
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "timezone": "Europe/London",
    "schedule": "before 6am",
    "automerge": true,
    "commitMessagePrefix": "chore: ",
    "commitMessageAction": "Upgrade",
    "commitMessageSuffix": " :rocket:",
    "packageRules": [
      {
        "packagePatterns": [
          "^@semantic-release"
        ],
        "groupName": "semantic-release packages"
      }
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "releasedLabels": false
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branch": "master"
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/commit-analyzer": "7.0.0",
    "@semantic-release/git": "8.0.0",
    "@semantic-release/npm": "6.0.0",
    "@semantic-release/release-notes-generator": "7.3.5",
    "ava": "2.4.0",
    "codecov": "3.6.1",
    "husky": "4.0.9",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "xo": "0.25.3",
    "env-cmd": "10.0.1"
  }
}
